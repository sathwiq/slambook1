<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To YelpCamp!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/meetups/new">Add New meetup</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% meetups.forEach(function(meetup){  if(meetup.date <= new Date()){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= meetup.image %>">
                   <div class="caption">
                       <h4><%= meetup.name %></h4>
                   </div>
                   <p>
                       <a href="/meetups/<%= meetup._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }}); %>
    </div>
</div>

<% include ../partials/footer %>
