<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= feed.image %>">
                <div class="caption-full">
                    <h4><a><%=feed.name%></a></h4>
                    <p><%= feed.description %></p>
                    <p>
                        <em>Submitted By <%= feed.author.username %></em>
                    </p>
                    <% if(currentUser && feed.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/feeds/<%= feed._id %>/edit">Edit</a>
                        <form id="delete-form" action="/feeds/<%= feed._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/feeds/<%= feed._id %>/commentsf/new">Add New Comment</a>
                </div>
                <hr>
                <% feed.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/feeds/<%=feed._id %>/commentsf/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/feeds/<%=feed._id %>/commentsf/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>